@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="ibox">
            <div class="ibox-content" id="form">
                <form class="row">
                    <!--选项卡开始-->
                    <div class="col-sm-12">
                        <div class="tabs-container">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a data-toggle="tab" href="#tab-1" aria-expanded="true">基本信息</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">

                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label class="control-label">编号：</label>
                                                <input type="text" class="form-control input-sm" name="cRoles_Number" data-bind="value:cRoles_Number" placeholder="请输入编号" />
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label class="control-label">角色名称：</label>
                                                <input type="text" class="form-control input-sm" name="cRoles_Name" data-bind="value:cRoles_Name" placeholder="请输入角色名称" />
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label class="control-label">备注：</label>
                                                <textarea class="form-control input-sm" name="cRoles_Remark" data-bind="value:cRoles_Remark" placeholder="请输入备注"></textarea>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!--选项卡结束-->
                </form>

            </div>
        </div>
    </div>
</div>
<!--按钮-->
<div style="height:50px; width:100%;"></div>
<div style="width: 100%;height: 50px;background-color: #d2d2d2;position: fixed;bottom: 0px;padding: 10px; z-index:99999;" class="text-right">
    <button type="button" class="btn btn-success btn-sm" data-bind="visible:!Func.IsAdd()" onclick="$Form.ResetUrl(null)">新增</button>
    <button class="btn btn-primary btn-sm" onclick="$Form.Save({ url:'@Url.Action("Save")' })">提交</button>
    <button class="btn btn-danger btn-sm" onclick="Lay.close($.GetFrameIndex())">关闭</button>
</div>
@section css{

}
@section js{
    <script src="~/Scripts/SysFrameWork/FrameWork.js"></script>
    <script src="~/Scripts/SysFrameWork/FrameWork_Form.js"></script>
    <script type="text/javascript">
        var KeyId = $.Tools.GetQueryString("ID");
        $(function () {
            ko.applyBindings(vModel);//注册vModel
            Func.Load(KeyId);
        });

        var Func = {
            IsAdd: function () {
                if (KeyId == null || KeyId == "" || KeyId == undefined || KeyId == "@Guid.Empty")
                    return true;
                return false;
            },
            Load: function (ID) {
                $Form.Load({
                    id: ID,
                    url: "@Url.Action("Find")",
                    callBack: function (r) {
                        if (Func.IsAdd()) {
                            $.Tools.Ajax({
                                type: "post",
                                url: "@Url.Action("Num")",
                                success: function (r) {
                                    if (r.status == 1)
                                        vModel.cRoles_Number(r.num);
                                }
                            });
                        }
                    }
                });
            },
            FindBack: {
                Role: {
                    @*CallBack: function (id) {
                        $.post('@Url.Action("Find", "Role")', { id: id }, function (r) {
                            vModel.uRoles_ID((id == "" || id == undefined) ? '@Guid.Empty' : id);
                            vModel.cRoles_Name(r.cRoles_Name == "" ? "请选择角色" : r.cRoles_Name);
                        });
                    }*@
                }
            }
        };

        var vModel = {
            List: ko.observableArray(""),
            uRoles_ID: ko.observable(""),
            cRoles_Number: ko.observable(""),
            cRoles_Name: ko.observable(""),
            cRoles_Remark: ko.observable(""),
            dRoles_CreateTime: ko.observable("")
        };
    </script>
}
